<div id= "stateSelec1" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">State 1</div> 
<div id= "transitionSelec1" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">Transition 1</div> 
<div id= "stateSelec2" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">State 2</div> 
<div id= "transitionSelec2" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">Transition 2</div> 
<div id= "stateSelec3" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">State 3</div> 
<div id= "transitionSelec2" ondrop="return dragDrop(event)" ondragover="return dragOver(event)">Transition 3</div>

<script>
function dragStart(ev){
	ev.dataTransfer.setData("ID", ev.target.getAttribute('id'));	
}

function dragOver(ev){
	return false;
}

function dragDrop(ev){
	var selected = ev.dataTransfer.getData("ID");
	ev.target.appendChild(document.getElementById(selected));
	
}

</script>
